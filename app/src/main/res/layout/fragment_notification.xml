<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/color_3"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить новое заведение"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/etAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Адрес (текст)"
            android:inputType="textPostalAddress"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etAddressLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ссылка на карту"
            android:inputType="textUri"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etShortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Краткое описание"
            android:inputType="textMultiLine"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etFullDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Полное описание"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            style="@style/LoginButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>